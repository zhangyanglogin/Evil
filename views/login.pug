    script(src='/javascript/jquery.validate.extend.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/bootstrap3-dialog/1.34.7/js/bootstrap-dialog.min.js')
    script(src='/javascript/web.js')
    script(src='/javascript/login.js')
    

