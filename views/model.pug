                  ul.list-inline.small(style='margin-bottom: 0')
                    li
                      a(href='#',title='编辑')
                        i.glyphicon.glyphicon-edit  
                    li
                      a(href='#',title='删除')
                        i.glyphicon.glyphicon-remove
              - })
    - })
  script(src='/javascript/model.js')